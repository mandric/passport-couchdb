<html>
<body>
<% include menu %>

<h1>Login</h1>

<p><%= message %></p>

<% if (!user)  { %>
<form id="login" action="" method="post">
    <input name="username" type="text" placeholder="username">
    <input name="password" type="password" placeholder="password">
    <input type="submit">
</form>
<% } else { %>
<p>Already logged in <%= user.username %></p>
<% } %>

